@model Memorizer.Web.Models.Authorize.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "StaticLayout";
    ViewData["Title"] = "Registration";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-paleorange">
                <div class="card-header">@ViewBag.Title</div>

                <div class="card-body">
                    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="Login" class="col-md-4 col-form-label text-md-right">{{ __('E-Mail Address') }}</label>
                            <div class="col-md-6">
                                <input asp-for="Login" class="form-control" required autofocus />
                                <span asp-validation-for="Login" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Name" class="col-md-4 col-form-label text-md-right">{{ __('Public name') }}</label>
                            <div class="col-md-6">
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Password" class="col-md-4 col-form-label text-md-right">{{ __('Password') }}</label>
                            <div class="col-md-6">
                                <input asp-for="Password" class="form-control" required />
                                <span asp-validation-for="Password" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ConfirmPassword" class="col-md-4 col-form-label text-md-right">{{ __('Confirm password') }}</label>
                            <div class="col-md-6">
                                <input asp-for="ConfirmPassword" class="form-control" required />
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                    </form>
                    <hr>
                    <div class="d-flex justify-content-center">
                        <a class="btn-link text-dark" href="{{route('google')}}"><i class="fab fa-google"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


